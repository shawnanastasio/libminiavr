# Project/MCU configuration
NAME:=libminiavr
MCU:=atmega328p
BOARD:=ARDUINO_AVR_UNO
F_CPU:=16000000
SRCS:=libminiavr.c

# Autogenerated
DEPS:=$(SRCS:.c=.o)
BIN:=$(NAME).a

# Toolchain
CC:=avr-gcc
AR:=avr-ar
OBJCOPY:=avr-objcopy

CFLAGS:=-mmcu=$(MCU) -D$(BOARD) -DF_CPU=$(F_CPU) -Os

.PHONY all: $(BIN)

%.o: %.c
	$(CC) $(CFLAGS) -o $@ -c $<

$(BIN): $(DEPS)
	$(AR) rcs $@ $<

clean:
	rm -f $(DEPS)
	rm -f $(BIN)
